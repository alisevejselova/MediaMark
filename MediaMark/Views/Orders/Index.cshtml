@model IEnumerable<MediaMark.Models.Order>

<div class="jumbotron">
    <h1>Order List</h1>
</div>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.FullName)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdentityNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>

            quantity
        </th>
        <th>total price</th>
        <th>order details</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @item.OrderDetail.Sum(a => a.Quantity)
            </td>
            <td>@item.OrderDetail.Sum(a => a.TotalPrice)</td>

            <td>@Html.ActionLink("Details", "OrderDetailsAction", new { orderId = item.OrderID })</td>
        </tr>
    }

</table>