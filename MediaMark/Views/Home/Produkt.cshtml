@model MediaMark.Models.Products
@using MediaMark.Models;

@{
    ViewBag.Title = Model.ProductName;

    IEnumerable<Category> KategoriListesi = ViewBag.KategoriListesi as IEnumerable<Category>;
}

<div class="jumbotron">
    <h3>@Model.ProductName</h3>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Categories</h2>
        <ul>
            @foreach (var item in KategoriListesi)
            {
                <li>@Html.ActionLink(item.CategoryName, "Kategori", new { id = item.CategoryId })</li>
            }
        </ul>
    </div>
    <div class="col-md-9">
        <h4><b><i>PRODUCT NAME</i></b> </h4>
        <h5>@Model.ProductName</h5>
        <div class="row">
            <div class="col-md-6"><img src="/images/@(Model.ProductID).jpg" style="max-width:100%;" /></div>
            <div class="col-md-6">
                Product Price : <span style="color:red;font-weight:bold;font-size:16px;">@Model.ProductPrice den.</span><br /><br />
                <form action="/Carts/AddToCart">
                    <input type="hidden" name="id" id="id" value="@Model.ProductID" style="width:50px;" />
                    Quantity<input type="number" name="quantity" id="quantity" value="1" style="width:50px;" /><br /><br />
                    <input type="submit" id="gonder" value="ADD TO CART" />
                </form>
            </div>
        </div>
        <h3><b><i>PRODUCT DESCRIPTION</i></b> </h3>
        <p> @Html.DisplayFor(model => model.ProductDescription)</p>
    </div>
</div>



